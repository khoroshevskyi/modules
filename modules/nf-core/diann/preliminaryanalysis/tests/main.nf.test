nextflow_process {

    name "Test Process DIANN_PRELIMINARYANALYSIS"
    script "../main.nf"
    process "DIANN_PRELIMINARYANALYSIS"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "diann"
    tag "diann/preliminaryanalysis"
    tag "untar"

    setup {
        run("UNTAR") {
            script "../../../../nf-core/untar/main.nf"
            process {
                """
                input[0] = [
                    [id:'test'],
                    file(params.modules_testdata_base_path + 'proteomics/diann/RD139_Narrow_UPS1_0_1fmol_inj1.mzML.tar.gz', checkIfExists: true)
                ]
                """
            }
        }
    }

    test("proteomics - preliminary analysis") {

        when {
            process {
                """
                input[0] = UNTAR.out.untar.map{ meta, dir ->  
                    def mzmlFile = dir.resolve('RD139_Narrow_UPS1_0_1fmol_inj1.mzML')
                    [meta + [precursormasstolerance:'20', fragmentmasstolerance:'20', precursormasstoleranceunit:'ppm', fragmentmasstoleranceunit:'ppm'], mzmlFile, file(params.modules_testdata_base_path + 'proteomics/diann/lib.predicted.speclib', checkIfExists: true)]
                }
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert path("${process.out.log[0][1]}").exists() },
                { assert snapshot(
                    process.out.diann_quant,
                    process.out.versions
                ).match() }
            )
        }
    }

    test("proteomics - preliminary analysis - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = UNTAR.out.untar.map{ meta, dir ->  
                    def mzmlFile = dir.resolve('RD139_Narrow_UPS1_0_1fmol_inj1.mzML')
                    [meta + [precursormasstolerance:'20', fragmentmasstolerance:'20', precursormasstoleranceunit:'ppm', fragmentmasstoleranceunit:'ppm'], mzmlFile, file(params.modules_testdata_base_path + 'proteomics/diann/lib.predicted.speclib', checkIfExists: true)]
                }
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
