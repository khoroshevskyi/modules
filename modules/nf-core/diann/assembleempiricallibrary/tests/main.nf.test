nextflow_process {

    name "Test Process DIANN_ASSEMBLEEMPIRICALLIBRARY"
    script "../main.nf"
    process "DIANN_ASSEMBLEEMPIRICALLIBRARY"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "diann"
    tag "diann/assembleempiricallibrary"
    tag "untar"

    setup {
        run("UNTAR") {
            script "../../../../nf-core/untar/main.nf"
            process {
                """
                input[0] = [
                    [id:'test_exp'],
                    file(params.modules_testdata_base_path + 'proteomics/diann/RD139_Narrow_UPS1_0_1fmol_inj1.mzML.tar.gz', checkIfExists: true)
                ]
                """
            }
        }
    }

    test("proteomics - assemble empirical library") {

        when {
            process {
                """
                input[0] = UNTAR.out.untar.map{ meta, dir ->  
                    def mzmlFile = dir.resolve('RD139_Narrow_UPS1_0_1fmol_inj1.mzML')
                    [[experiment_id:'test_exp'], [mzmlFile], [file(params.modules_testdata_base_path + 'proteomics/diann/preliminary_analysis.quant', checkIfExists: true)], file(params.modules_testdata_base_path + 'proteomics/diann/lib.predicted.speclib', checkIfExists: true)]
                }
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert path("${process.out.log[0][1]}").exists() },
                { assert snapshot(
                    process.out.empirical_library,
                    process.out.versions
                ).match() }
            )
        }
    }

    test("proteomics - assemble empirical library - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = UNTAR.out.untar.map{ meta, dir ->  
                    def mzmlFile = dir.resolve('RD139_Narrow_UPS1_0_1fmol_inj1.mzML')
                    [[experiment_id:'test_exp'], [mzmlFile], [file(params.modules_testdata_base_path + 'proteomics/diann/preliminary_analysis.quant', checkIfExists: true)], file(params.modules_testdata_base_path + 'proteomics/diann/lib.predicted.speclib', checkIfExists: true)]
                }
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
